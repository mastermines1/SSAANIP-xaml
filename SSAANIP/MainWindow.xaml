<Window x:Class="SSAANIP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SSAANIP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10,10,10,-6">
        <ListBox HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Visibility="Visible" Name="lbSettings">
            <Label Content="Settings" FontWeight="Bold" FontSize="14"></Label>
            <Button Background="White" BorderBrush="White" Content="Theme" Click="showTheme" Width="77" />
            <ListBox HorizontalAlignment="Left" Margin="0,0,0,0" Width="80" Name="lbTheme" Visibility="Collapsed">
                <Button Content="Dark" Background="White" BorderBrush="White"></Button>
                <Button Content="Light" Background="White" BorderBrush="White"></Button>
            </ListBox>

        </ListBox>
        <Label Name="output" Content="Label" HorizontalAlignment="Left" Height="211" Margin="-11,209,0,0" VerticalAlignment="Top" Width="1410"/>
        <Button Content="Button" HorizontalAlignment="Left" Height="52" Margin="226,131,0,0" VerticalAlignment="Top" Width="91" Click="Button_Click"/>
    </Grid>
</Window>
