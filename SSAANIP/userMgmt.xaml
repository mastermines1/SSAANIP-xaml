<Page x:Class="SSAANIP.userMgmt"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SSAANIP"
      mc:Ignorable="d" 
      d:DesignHeight="414" d:DesignWidth="865"
      Background="White">

    <Grid Width="865" Height="414">
        <Label Name="lblUserName" Content="Username: " HorizontalAlignment="Left" Height="25" Margin="32,41,0,0" VerticalAlignment="Top" Width="205"/>
        <Button Name="btnLogout" Content="Logout" HorizontalAlignment="Left" Height="28" Margin="32,74,0,0" VerticalAlignment="Top" Width="102" Click="btnLogout_Click"/>
        <Button Name="btnDelete" Content="Delete account" HorizontalAlignment="Left" Background="Red" Foreground="White" Height="35" Margin="32,116,0,0" VerticalAlignment="Top" Width="102" Click="btnDelete_Click"/>
        <Button Name="btnAdmin" Visibility="Hidden" Content="Admin panel" HorizontalAlignment="Left" Height="38" Margin="32,186,0,0" VerticalAlignment="Top" Width="102" Click="btnAdmin_Click"/>
        <Button Name="btnback" Content="Back" HorizontalAlignment="Left" Height="22" Margin="10,333,0,0" VerticalAlignment="Top" Width="73" Click="btnback_Click"/>

        <Grid Name="adminPanel" >
            <ListBox Name="lsUsers" BorderThickness="0" HorizontalAlignment="Left" Height="404" Margin="685,10,0,0" VerticalAlignment="Top" Width="180" />
            <Button Name="btnDeleteSelectedUser" Content="Delete user" Visibility="Visible"  HorizontalAlignment="Left" Height="25" Margin="613,36,0,0" VerticalAlignment="Top" Width="70" Click="btnDeleteSelectedUser_Click" />
            <Button Name="btnMakeAdmin" Content="Make admin" HorizontalAlignment="Left" Height="27" Margin="613,65,0,0" VerticalAlignment="Top" Width="70" RenderTransformOrigin="0.5,0.5" Click="btnMakeAdmin_Click" />
            <Label Content="Add user" HorizontalAlignment="Left" Height="38" Margin="287,16,0,0" VerticalAlignment="Top" Width="93"  FontWeight="Bold" FontSize="16"/>
            <Label Content="Username:" HorizontalAlignment="Left" Height="25" Margin="272,41,0,0" VerticalAlignment="Top" Width="108" />
            <TextBox Name="txtUserName" HorizontalAlignment="Left" Height="21" Margin="272,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="108" />
            <Label Content="Password:" HorizontalAlignment="Left" Height="31" Margin="272,97,0,0" VerticalAlignment="Top" Width="108" />
            <PasswordBox Name="pwdPassword" HorizontalAlignment="Left" Height="21" Margin="272,129,0,0" VerticalAlignment="Top" Width="108" />
            <Label Content="Confirm Password" HorizontalAlignment="Left" Height="29" Margin="272,150,0,0" VerticalAlignment="Top" Width="108" />
            <PasswordBox Name="pswConfirmPassword" HorizontalAlignment="Left" Height="21" Margin="272,183,0,0" VerticalAlignment="Top" Width="108" />
            <Button Name="btnAddUser" Content="AddUser" HorizontalAlignment="Left" Height="27" Margin="287,212,0,0" VerticalAlignment="Top" Width="73" />

        </Grid>




    </Grid>

</Page>
